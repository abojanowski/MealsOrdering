<div class="row">
  <div class="col-xs-2">
    <h1 class="head"><%= link_to "Meals", root_path %></h1>
  </div>
  <div class="col-xs-3 pull-right text-right">
    <% if current_user %>
      <div class="log">
        <span><%= image_tag current_user.image_url, alt: current_user.name %></span>
        <span><%= link_to 'Log Out', logout_path, method: :delete %></span>
      </div>  
    <% else %> 
      <div class="log">      
        <span><%= link_to 'Log in', '/auth/facebook' %></span>
      </div>
    <% end %>     
  </div>
</div>
